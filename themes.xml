<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TripGallery" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary branding color. -->
        <item name="colorPrimary">@color/beige_500</item>
        <item name="colorPrimaryVariant">@color/beige_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary branding color. -->
        <item name="colorSecondary">@color/beige_200</item>
        <item name="colorSecondaryVariant">@color/beige_400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background color. -->
        <item name="android:colorBackground">@color/beige_50</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
    </style>
</resources>
